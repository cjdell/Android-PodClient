<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="8dp">

    <GridLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:rowCount="4"
        android:columnCount="2"
        android:longClickable="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Sync feed automatically"
            android:id="@+id/textView3"
            android:layout_row="0"
            android:layout_column="0"
            android:gravity="center_vertical" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/chkSyncFeedEnabled"
            android:checked="false"
            android:layout_column="1"
            android:layout_row="0"
            android:layout_gravity="right"
            android:gravity="center_vertical" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Download new items"
            android:id="@+id/textView2"
            android:layout_row="1"
            android:layout_column="0"
            android:gravity="center_vertical" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/chkAutoDownloadEnabled"
            android:layout_column="1"
            android:layout_row="1"
            android:layout_gravity="right"
            android:gravity="center_vertical" />

        <EditText
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/txtMaximumItems"
            android:text="100"
            android:gravity="center_vertical|right"
            android:layout_column="1"
            android:layout_row="2"
            android:layout_gravity="right" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Maximum items"
            android:id="@+id/textView"
            android:layout_column="0"
            android:layout_row="2"
            android:gravity="center_vertical" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Note: Automatic synchronisation will only occur when device is plugged into a power source"
            android:id="@+id/textView4"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_columnSpan="2" />

    </GridLayout>

</FrameLayout>