<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cjdell.podclient.FeedListFragment">

    <ListView
        android:id="@+id/lstFeeds"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:divider="@null"
        android:dividerHeight="-6dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="#eee" />

    <TextView
        android:id="@+id/emptyResults"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:text="Looks like you have no feeds. Why not use the top right (+) button to search for your favourites feeds?"
        android:padding="8dp"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
        android:textColor="#555"
        android:gravity="center"
        android:textAlignment="center" />

</RelativeLayout>
